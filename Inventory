import java.io.*;
import java.util.*;
public class Inventory extends Items{
    private int limiting;
    private int counter;
    private ArrayList<Items> items = new ArrayList<Items>();
        
    public String inventory(){
        String s = new String();
        for (int i = 0; i < items.size(); i++){
            
            s += ("[ " + items.get(i).getName() + "]\t");
            
        }
        return s;
    }
    
    public void setItem(Items item){
        while(counter <= limiting){
            items.add(item);
        
        }
        import java.io.*;
import java.util.*;
public class Inventory{
    private int limiting;
    private int counter;
    private String bagType;
    private ArrayList<Object> items = new ArrayList<Object>();
    private int effect;
    public Inventory(){
        limiting = 2;
        counter = 0;
        bagType = "bag";
        effect = 0;
    }
    public String inventory(){
        String s = new String();
        for (int i = 0; i < items.size(); i++){

            s += ("[ " + items.get(i) + " ]\t");

        }
        return s;
    }
    public void removeItem(int a){
        items.remove(items.get(a));
    }
    public Object useItem(int a){
        return items.get(a);
    }
    public int getSize(){
        return items.size();
    }
    public void setType(String initbagType){
        bagType = initbagType;
        if (bagType.equals("satchel")){
            limiting = 9;
        }
    }
    public void setItem(Object item, int initeffect){
        if(counter <= limiting){
            items.add(item);
            effect = initeffect;
            System.out.println("Item successfully equiped");
            
        }else{System.out.println("Your inventory is full");}
    }
    public int getEffect(int a){
        return effect;
    }
}
        
    }
}
