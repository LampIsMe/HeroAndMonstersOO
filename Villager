import java.util.ArrayList;
import java.util.Scanner;
public class Villager{
    ArrayList<Monster>monsterArray;
    int villagerx;
    int villagery;
    public Villager(int num){
        villagerx = (int)(Math.random() * 15);
        villagery = (int)(Math.random() * 15);
        
    }

    public String Vi(int num){
        Scanner a = new Scanner(System.in);
        
        if (num ==0){
            System.out.println("That bag looks a bit small");
            System.out.println("Would you like to buy a Satchel for 30 gold");
            String answer = a.next().toLowerCase();
            if (answer.equals("yes")){
                return "satchel";
            }
        }
        else if (num == 1){
            System.out.println("Weapons for sale...starting from a low price of 10 gold");
            System.out.println("Would you like to buy something?");
            String answer = a.next().toLowerCase();
            if (answer.equals("yes")){
                System.out.println("1) Short Sword(30 gold), 2) Long Sword(40 gold), 3) Battle Axe(100 gold)");
                int answer2 = a.nextInt();
                if (answer2 == 1){
                    return "short sword";
                }
                else if (answer2 == 2){
                    return "long sword";
                }
                else if (answer2 == 3){
                    return "battle axe (OP)";
                }
            }
        }
        else if (num == 2){
            System.out.println("Hi, I have a pair of Leather Sandels for you");
            System.out.println("Would you like to buy it for 30 gold");
            String answer = a.next().toLowerCase();
            if (answer.equals("yes")){
                return "leather sandels";
            }
        }
        else if (num ==3){
            System.out.println("Buy this OP bomb for only 90 gold");
            System.out.println("Hey you...would you like to buy one?");
            String answer = a.next().toLowerCase();
            if (answer.equals("yes")){
                return "bomb";
            }
        }
        else if (num ==4){
            System.out.println("Potions are sold here");
            System.out.println("Hey you...would you like to buy one?");
            String answer = a.next().toLowerCase();
            if (answer.equals("yes")){
                System.out.println("1) 1/2 energy (20), full energy(40 gold), 3) pheonix down(80 gold)");
                int answer2 = a.nextInt();
                if (answer2 == 1){
                    return "1/2 energy";
                }
                else if (answer2 == 2){
                    return "full energy";
                }
                else if (answer2 == 3){
                    return "pheonix down";
                }
            }
        }
        return "";
    }

    public int getx(){
        return villagery;
    }

    public int gety(){
        return villagerx;
    }

    public void resetx(){
        villagery = (int)(Math.random() * 10) ;
    }

    public void resety(){
        villagerx = (int)(Math.random() * 10);
    }
}
